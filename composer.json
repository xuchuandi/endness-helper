{
  "name": "endness/helper",
  "type": "library",
  "license": "MIT",
  "description": "常见帮助类",
  "authors": [
    {
      "name": "Endness",
      "email": "1764631452@qq.com"
    }
  ],
  "keywords": [
    "php",
    "hyperf"
  ],
  "autoload": {
    "psr-4": {
      "Endness\\": "./src",
      "Endness\\Helper\\": "src/Helper",
      "Endness\\JsonRpc\\": "src/JsonRpc",
      "Endness\\Annotation\\": "src/Annotation",
      "Endness\\Middleware\\": "src/Middleware",
      "Endness\\Exception\\": "src/Exception"
    },
    "files": [
      "src/Functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "tests"
    }
  },
  "require": {
    "php": ">=8.0",
    "firebase/php-jwt": "^5.4",
    "hyperf/db-connection": "^2.2",
    "hyperf/di": "^2.2",
    "hyperf/framework": "~2.2.0",
    "hyperf/http-server": "~2.2.0",
    "hyperf/json-rpc": "^2.2",
    "hyperf/logger": "~2.2.0",
    "hyperf/redis": "~2.2.0",
    "hyperf/rpc-client": "^2.2",
    "hyperf/validation": "^2.2",
    "league/flysystem": "^2.3",
    "tencentcloud/captcha": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "~3.5.0",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^0.12",
    "swoole/ide-helper": "^4.5"
  },
  "suggest": {
    "ext-openssl": "Required to use HTTPS.",
    "ext-json": "Required to use JSON."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml --colors=always",
    "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
    "cs-fix": "php-cs-fixer fix $1"
  },
  "extra": {
    "hyperf": {
      "config": "Endness\\Helper\\ConfigProvider"
    }
  }
}