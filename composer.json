{
  "name": "endness/helper",
  "type": "library",
  "license": "MIT",
  "description": "常见帮助类",
  "authors": [
    {
      "name": "Endness",
      "email": "1764631452@qq.com"
    }
  ],
  "keywords": [
    "php",
    "hyperf"
  ],
  "autoload": {
    "psr-4": {
      "Endness\\": "./src",
      "Endness\\Helper\\": "src/Helper",
      "Endness\\JsonRpc\\": "src/JsonRpc",
      "Endness\\Annotation\\": "src/Annotation",
      "Endness\\Middleware\\": "src/Middleware",
      "Endness\\Exception\\": "src/Exception"
    },
    "files": [
      "src/Functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "tests"
    }
  },
  "require": {
    "php": ">=8.1",
    "firebase/php-jwt": "^6.11",
    "hyperf/cache": "^3.1",
    "hyperf/config": "^3.1",
    "hyperf/config-nacos": "^3.1",
    "hyperf/db-connection": "~3.1.0",
    "hyperf/di": "~3.1.0",
    "hyperf/framework": "~3.1.0",
    "hyperf/http-server": "~3.1.0",
    "hyperf/json-rpc": "^3.1",
    "hyperf/logger": "~3.1.0",
    "hyperf/redis": "~3.1.0",
    "hyperf/rpc-client": "^3.1",
    "hyperf/validation": "^3.1",
    "hyperf/xxl-job-incubator": "^0.4.2",
    "league/flysystem": "^2.3",
    "tencentcloud/captcha": "^3.0",
    "viest/php-ext-xlswriter-ide-helper": "^1.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^0.12",
    "swoole/ide-helper": "^4.5"
  },
  "suggest": {
    "ext-openssl": "Required to use HTTPS.",
    "ext-json": "Required to use JSON."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml --colors=always",
    "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
    "cs-fix": "php-cs-fixer fix $1"
  },
  "extra": {
    "hyperf": {
      "config": "Endness\\ConfigProvider"
    }
  },
  "repositories": [
    {
      "description": "华为Composer全量镜像",
      "type": "composer",
      "url": "https://repo.huaweicloud.com/repository/php/",
      "canonical": true
    },
    {
      "description": "官方源",
      "type": "composer",
      "url": "https://repo.packagist.org"
    }
  ]
}
